{
    "manifest_version": 2,
    "name": "ScryfallSearch",
    "version": "1.0",
    "description": "Allows searching of MTG stores for cards directly from Scryfall",
    "icons": {
        "48": "icons/border-48.png"
    },
    "content_scripts": [
        {
            "matches": [
                "*://*.scryfall.com/*"
            ],
            "js": [
                "borderify.js"
            ]
        }
    ]
}